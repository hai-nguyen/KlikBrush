<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:text="00:12"
        android:textSize="40dp" />

    <ProgressBar
        android:id="@+id/progress_phase"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_counter"
        android:padding="20dp" />

    <fragment
        android:id="@+id/fragment_teeth"
        android:name="com.klikbrush.ui.TeethFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/progress_phase"
        android:layout_above="@+id/ll_stats" >
    </fragment>

    <LinearLayout
        android:id="@id/ll_stats"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        android:weightSum="2" >

        <TextView
            android:id="@+id/txt_frequency"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Speed 40%"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_strokelength"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Strokelength 20"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>